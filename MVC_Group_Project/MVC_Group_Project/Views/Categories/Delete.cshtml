@model MVC_Group_Project.Models.Category

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<div class="panel panel-primary" style="width:300px; text-align:center">

    <div class="panel-heading">
        <h3 class="panel-title">Category:   @Html.DisplayFor(model => model.CategoryName)</h3>
    </div>
    <div class="panel-body" style="text-align:center">
        <img src="../../@Html.DisplayFor(model => model.ImagePath)" style="height:150px; width:150px" />
    </div>
</div>

<div>  

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
