@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Role Details";
}

<h2>Role Details.</h2>

<div class="panel panel-primary" style="width:300px; text-align:center">

    <div class="panel-heading">
        <h3 class="panel-title">Category:   @Html.DisplayNameFor(model => model.Name)</h3>
    </div>
    <div class="panel-body" style="text-align:center">
        @Html.DisplayFor(model => model.Name)
    </div>
</div>


<h4 class="text-info">List of users in this role:</h4>

@if (ViewBag.UserCount == 0)
{
    <hr />
    <p>No users found in this role.</p>
}

<table class="table table-striped table-hover">

    @foreach (var item in ViewBag.Users)
    {
        <tr>
            <td>
                @item.UserName
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>



