@model IEnumerable<MVC_Group_Project.Models.BiddingItem>

@{
    ViewBag.Title = "Home Page";
}

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<link href="~/Scripts/jquery.countdown.package-2.0.2/jquery.countdown.css" rel="stylesheet" />
<script src="~/Scripts/jquery.countdown.package-2.0.2/jquery.countdown.js"></script>
<script src="~/Scripts/jquery.countdown.package-2.0.2/jquery.plugin.js"></script>

@section Scripts {
    @Scripts.Render("~/Scripts/contentHover.js")
    @Scripts.Render("~/Scripts/jquery.countdown.package-2.0.2/jquery.plugin.js")
    @Scripts.Render("~/Scripts/jquery.countdown.package-2.0.2/jquery.countdown.js")

    <script type="text/javascript">
        function AddHoverEffectOnItemByID(element) {
            $('.' + element).contenthover({
                overlay_width: 200,
                overlay_height: 120,
                effect: 'slide',
                slide_direction: 'right',
                overlay_x_position: 'right',
                overlay_y_position: 'center',
                overlay_background: '#000',
                overlay_opacity: 0.8
            });
        }

        $(document).ready(function () {
            AddHoverEffectOnItemByID("MyAwesomeHoverAbilities");
        })
    </script>
}
<hr />
<div class="jumbotron">
        <div class="container">
        <div id="myCarousel" class="carousel slide">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active" style="background-color:powderblue"></li>
                <li data-target="#myCarousel" data-slide-to="1" style="background-color:powderblue"></li>
                <li data-target="#myCarousel" data-slide-to="2" style="background-color:powderblue"></li>
            </ol>
            <div style="align-content:center">
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Images/bidimage2.jpg" />
                        <div class="container">
                            <div class="carousel-caption">                               
                                <a>@Html.ActionLink("Add Bid Item Here!", "Create", "BiddingItems")</a>
                            </div>

                        </div>
                    </div>

                    <div class="item">
                        <img src="~/Images/bidimage3.jpg" />
                        <div class="container">
                            <div class="carousel-caption">                               
                                <a>@Html.ActionLink("Add Bid Item Here!", "Create", "BiddingItems")</a>
                            </div>

                        </div>
                    </div>

                    <div class="item">
                        <img src="~/Images/bidimage4.jpg" />
                        <div class="container">
                            <div class="carousel-caption">                              
                                <a>@Html.ActionLink("Add Bid Item Here!", "Create", "BiddingItems")</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>

            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>

        </div>
    </div>
</div>
