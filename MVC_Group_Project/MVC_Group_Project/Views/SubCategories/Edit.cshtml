@model MVC_Group_Project.Models.SubCategory

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<hr />

<script src="~/Scripts/alertifyjs/alertify.js"></script>
<link href="~/Scripts/alertifyjs/css/alertify.css" rel="stylesheet" />
<link href="~/Scripts/alertifyjs/css/themes/default.css" rel="stylesheet" />

@using (Html.BeginForm("Edit", "SubCategories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="panel panel-warning" style="width:500px; text-align:center">
        <div class=" panel-heading">
            <h3 class="panel-title">SubCategory</h3>
        </div>

        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.SubCategoryID)

            <div>
                @Html.LabelFor(model => model.SubCategoryName, "SubCategory:", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class ="col-md-offset-4" style="align-content:center">
                    @Html.EditorFor(model => model.SubCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SubCategoryName, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div style="text-align:left">
                @Html.LabelFor(model => model.ImagePath, "CurrentImage:", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-offset-4" style="align-content:center">
                    @*@Html.EditorFor(model => model.ImagePath, new { htmlAttributes = new { @class = "form-control" } })*@
                    <img src="../../@Html.DisplayFor(model => model.ImagePath)" style="height:150px; width:150px" />
                    @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div >
                @Html.LabelFor(model => model.ImagePath, "NewImage:", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-offset-4" style="align-content:center">
                    @*@Html.EditorFor(model => model.ImagePath, new { htmlAttributes = new { @class = "form-control" } })*@
                    <input type="file" id="file" name="file" />
                    @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div >
                @Html.LabelFor(model => model.CategoryID, "Category:", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-offset-4" style="align-content:center">
                    @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                </div>
            </div>
           <br />
                <div>
                    <div class="col-md-12" style="text-align:center">
                        <input type="submit" value="Save" class="btn btn-warning" />
                    </div>
                </div>
         
            @if (ViewData["Status"] == "NoImage")
	        {
		        <script>
                    alertify.error("Please select an image!");
                </script>
	        }

        </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/alertifyjs/alertify.js")
}
