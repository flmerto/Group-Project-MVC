@model MVC_Group_Project.Models.User

@{
    ViewBag.Title = "User Details";
}

<h2>User Details</h2>

<div>
    <hr />
    <div class="panel panel-primary" style="width:300px; text-align:center">
        <div class="panel-heading">
            <h3 class="panel-title">UserName</h3>
        </div>
        <div class="panel-body">
       
            @Html.DisplayFor(model => model.UserName)
        </div>
    </div>
</div>

<h4 class="text-info">List of roles for this user:</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <p>No roles found for this user.</p>
}

<table class="table table-striped table-hover table-bordered">

    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td>
                @item
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Reset Password", "ResetPassword", new { id = Model.Id }) | 
    @Html.ActionLink("Back to List", "Index")
</p>



